<!DOCTYPE html>
<html>
  <head>
    <title>LambdaV</title>
    <meta name="viewport" content="width=device-width">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <div class="container">
      <header>
        <% if current_user %>
        User: <%= current_user.email %> |
        <%= link_to('logout', sessions_path, method: :delete) %>
        <% else %>
        <%= link_to('login', new_sessions_path) %> or
        <%= link_to('sign in', new_user_path) %>
        <% end %>
        [
        <%= link_to('EN', url_for(locale: 'en')) %> /
        <%= link_to('JA', url_for(locale: 'ja')) %>
        ]
      </header>
      <%= yield %>
    </div>
  </body>
</html>
