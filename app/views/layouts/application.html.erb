<!DOCTYPE html>
<html>
  <head>
    <title>LambdaV</title>
    <meta name="viewport" content="width=device-width">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container">
        <%= link_to(t('.title'), root_path, class: 'navbar-brand') %>

        <ul class="navbar-nav mr-auto">
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown">
              Languages
            </a>
            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
              <a class="dropdown-item" href=<%= url_for(locale: 'en') %>>English</a>
              <a class="dropdown-item" href=<%= url_for(locale: 'ja') %>>Japanese</a>
            </div>
          </li>
        </ul>

        <span class="navbar-text">
          <% if logged_in? %>
            User: <%= link_to(current_user.email, edit_user_path(current_user)) %> |
            <%= link_to('logout', sessions_path, method: :delete) %>
          <% end %>
        </span>
      </div>
    </nav>

    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
