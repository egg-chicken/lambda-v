<!DOCTYPE html>
<html>
  <head>
    <title>LambdaV</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <header>
      <% if current_user %>
        <%= current_user.email %> |
        <%= link_to('logout', sessions_path, method: :delete) %>
      <% else %>
        <%= link_to('login', new_sessions_path) %> or
        <%= link_to('sign in', new_user_path) %>
      <% end %>
    </header>
    <%= yield %>
  </body>
</html>
